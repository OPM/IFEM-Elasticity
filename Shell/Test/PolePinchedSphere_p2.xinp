<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- Pinched spherical shell, 1/8 of a full sphere.
     Prescribed deflection of the top point.
     Quadratic spline Kirchhoff-Love thin shell elements.
     Polar parametrization with collapsed edge at the top. !-->

<simulation>

  <!-- General - geometry definitions !-->
  <geometry>
    <patchfile>hemisphere-symmZ.g2</patchfile>
    <refine patch="1" u="7" v="3"/>
    <topologysets>
      <set name="symmXY" type="edge">
        <item patch="1">1</item>
      </set>
      <set name="pole" type="edge">
        <item patch="1">2</item>
      </set>
      <set name="polevx" type="vertex">
        <item patch="1">2</item>
      </set>
      <set name="symmXZ" type="edge">
        <item patch="1">3</item>
      </set>
      <set name="symmYZ" type="edge">
        <item patch="1">4</item>
      </set>
      <set name="hemisphere" type="face">
        <item patch="1"/>
      </set>
    </topologysets>
    <collapse patch="1" edge="2"/>
  </geometry>

  <!-- General - Gauss quadrature scheme !-->
  <discretization>
    <nGauss default="0"/>
  </discretization>

  <!-- General - boundary conditions !-->
  <boundaryconditions>
    <dirichlet set="symmXY" type="symmXY"/>
    <dirichlet set="symmXZ" type="symmXZ"/>
    <dirichlet set="symmYZ" type="symmYZ"/>
    <dirichlet set="pole" comp="123000"/>
    <dirichlet set="pole" comp="12"/>
    <dirichlet set="polevx" comp="3" type="linear">-1.0</dirichlet>
  </boundaryconditions>

  <!-- Problem specific block !-->
  <KirchhoffLove>
    <isotropic E="2.0e11" nu="0.3" thickness="0.001"/>
  </KirchhoffLove>

  <!-- General - nonlinear solution setup !-->
  <nonlinearsolver>
    <rtol>1.0e-16</rtol>
    <dtol>1.0e5</dtol>
    <maxits>30</maxits>
    <nupdate>30</nupdate>
    <timestepping dt="0.1"/>
  </nonlinearsolver>

  <!-- General - point result output !-->
  <postprocessing>
    <resultpoints printmapping="true">
      <point patch="1" u="1.0" v="1.0"/>
    </resultpoints>
  </postprocessing>

</simulation>
